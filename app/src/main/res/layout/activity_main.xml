<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bojansolution.culinar.MainActivity">

    <EditText
        android:id="@+id/textSearchStore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintCulinar"
        android:inputType="none">
        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/listSearchStoreResult"
        android:layout_width="fill_parent"
        android:layout_height="601dp"
        android:layout_below="@+id/textSearchStore"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textSearchStore" />

</android.support.constraint.ConstraintLayout>
